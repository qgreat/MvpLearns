<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ye_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.yeyue.library.widgets.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivSelectTag"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_select_tag" />

        <android.support.design.widget.TabLayout
            android:id="@+id/ye_tab_layout"
            style="@style/YeTablayoutStyle"
            android:layout_toLeftOf="@id/ivSelectTag" />
    </com.yeyue.library.widgets.percent.PercentRelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/ye_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>