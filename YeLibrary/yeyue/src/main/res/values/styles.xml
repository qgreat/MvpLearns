<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Theme for the Preferences -->
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>

        <!-- Theme for all Alert Dialogs (e.g. from DialogPreference) -->
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- navigation icon color -->
        <item name="colorControlNormal">#62646c</item>
        <item name="android:textColorPrimary">#4d4d4d</item>
    </style>
    <!-- toolbar标题样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <!--titlebar 副标题-->
    <style name="Toolbar.SubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">9.0sp</item>
        <item name="android:textColor">#99ffffff</item>
    </style>

    <!--titlebar 标题-->
    <style name="ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--titleBar样式-->
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextAppearance">@style/ToolBar.Title</item>
        <item name="subtitleTextAppearance">@style/Toolbar.SubTitle</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:textSize">18sp</item> &lt;!&ndash;  搞掂字体大小&ndash;&gt;-->
    </style>


    <style name="TagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="atg_isAppendMode">false</item>
        <item name="atg_borderColor">#49C120</item>
        <item name="atg_textColor">#49C120</item>
        <item name="atg_backgroundColor">#FFFFFF</item>
        <item name="atg_dashBorderColor">#AAAAAA</item>
        <item name="atg_inputHintColor">#80000000</item>
        <item name="atg_inputTextColor">#DE000000</item>
        <item name="atg_checkedBorderColor">#49C120</item>
        <item name="atg_checkedTextColor">#FFFFFF</item>
        <item name="atg_checkedMarkerColor">#FFFFFF</item>
        <item name="atg_checkedBackgroundColor">#49C120</item>
        <item name="atg_pressedBackgroundColor">#EDEDED</item>
        <item name="atg_borderStrokeWidth">0.5dp</item>
        <item name="atg_textSize">14sp</item>
        <item name="atg_horizontalSpacing">12dp</item>
        <item name="atg_verticalSpacing">10dp</item>
        <item name="atg_horizontalPadding">12dp</item>
        <item name="atg_verticalPadding">6dp</item>
    </style>
    <style name="YeToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:maxWidth">@dimen/ye_Toolbar_Nav_height</item>
        <item name="android:maxHeight">@dimen/ye_Toolbar_Nav_height</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <!--导航栏ToolBar样式-->
    <style name="YeToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ye_Toolbar_height</item>
        <item name="android:background">@color/ye_color_Navigation_Base</item>
        <item name="contentInsetStart">0dp</item>
        <item name="navigationIcon">@drawable/ye_app_icon_back</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ToolbarStyle</item>
        <item name="titleTextColor">@color/ye_color_Navigation_Title</item>
    </style>

    <style name="YeToolbarHeaderStyle" parent="YeToolbarStyle">
        <item name="android:background">@color/ye_color_Navigation_Header_Base</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <!--底部Bottom样式-->
    <style name="YeBottomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="itemBackground">@color/ye_color_Bottom_Base</item>
        <item name="itemIconTint">@color/ye_app_bottombar_item_tint</item>
        <item name="itemTextColor">@color/ye_app_bottombar_item_tint</item>
    </style>

    <!--TabLayout样式-->
    <style name="YeTablayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="tabSelectedTextColor">@color/ye_color_Tab_Select</item>
        <item name="tabTextColor">@color/ye_color_Tab_Normal</item>
        <item name="tabIndicatorColor">@color/ye_color_Tab_Select</item>
    </style>

    <!--搜索的输入框样式-->
    <style name="YeSearchEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ye_bg_search_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:hint">搜索</item>
        <item name="android:textColorHint">@color/ye_color_Hint_Word</item>
        <item name="layout_textSizePercent">5%w</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textColor">@color/ye_color_Main_Word</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textCursorDrawable">@drawable/ye_shape_text_cursor</item>
    </style>

    <style name="YeLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ye_color_Line</item>
    </style>


    <!--查看大图页面，全屏显示-->
    <style name="ViewBigPicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Custom Preference Theme inherits from the v14 support library Material Theme -->
    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/AppPreferenceFragmentCompatStyle</item>
    </style>

    <!-- Custom Style for PreferenceFragmentCompat -->
    <style name="AppPreferenceFragmentCompatStyle" parent="@style/PreferenceFragment.Material">
        <!-- Custom layout for PreferenceFragmentCompat -->
    </style>

    <!-- Style for a custom Preference Entry -->
    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <!-- Style for a DialogPreference Entry -->
    <style name="AppPreference.DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- To tint the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppAlertDialogContent" parent="Theme.AppCompat.DayNight">
        <!-- To tint EditText and TimePicker -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
