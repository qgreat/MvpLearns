<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="Loadtype"
            type="com.yeyue.library.data.YeLoadtype" />

    </data>

    <com.yeyue.library.widgets.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avLoad"
            android:layout_width="match_parent"
            android:visibility="visible"
            app:layout_paddingPercent="10%w"
            app:indicatorColor="@color/ye_color_Main_Word"
            app:indicatorName="BallPulseIndicator"
            app:layout_heightPercent="100%w" />
    </com.yeyue.library.widgets.percent.PercentLinearLayout>
</layout>